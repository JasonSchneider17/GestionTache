<Window x:Class="GestionTache.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionTache"
        mc:Ignorable="d"
        Title="Gestionnaire de tâche" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top" >
                <MenuItem Header="Liste">
                    <MenuItem x:Name="menuItem_addListOfTask" Header="Ajouter une liste"/>
                    
                </MenuItem>
                <MenuItem Header="Tâche" >
                    <MenuItem Header="Ajouter une Tâche"/>
                </MenuItem>

                    

            </Menu>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListBox x:Name="listBox_listOfTasks" Grid.Column="0">
               <!-- <ListBoxItem>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <Image Source="Image/list.png" Height="25"  VerticalAlignment="Center" Margin="2,0,2,0"/>
                        <TextBlock Grid.Column="1"  Text="test" FontSize="22" VerticalAlignment="Center" Margin="10,0,2,0" />
                    </Grid>
                </ListBoxItem>-->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>

                            <Image Source="Image/list.png" Height="25"  VerticalAlignment="Center" Margin="2,0,2,0"/>
                            <TextBlock Grid.Column="1"  Text="test" FontSize="22" VerticalAlignment="Center" Margin="10,0,2,0" />
                        </Grid>


                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>


            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Title list" Height="40" Grid.Row="0" FontWeight="Bold" FontSize="25" Margin="5,0,0,0" VerticalAlignment="Center" />

                <ListBox x:Name="DisplayListTask" Grid.Row="1" BorderThickness="1" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" IsChecked="{Binding State}" />
                                <TextBlock Grid.Column="1"  Text="{Binding Name}"/>
                            </Grid>
                            

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>



            </Grid>

        </Grid>

    </Grid>
</Window>
